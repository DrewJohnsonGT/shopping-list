{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    /* Paths */
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"],
      "~/schema": ["./prisma/generated/zod"]
    }
  },
  "include": ["src", "prisma/seed.ts"]
}
